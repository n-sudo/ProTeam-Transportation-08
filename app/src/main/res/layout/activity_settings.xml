<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/notifications"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient2"
        android:text="notifications"
        android:textColor="@color/textForeground"
        app:layout_constraintEnd_toEndOf="@+id/travel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/travel"
        app:layout_constraintTop_toBottomOf="@+id/travel" />

    <Button
        android:id="@+id/travel"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:background="@drawable/gradient2"
        android:text="Check your travel budget"
        android:textColor="@color/textForeground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />

    <Button
        android:id="@+id/about"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient2"
        android:text="about"
        android:textColor="@color/textForeground"
        app:layout_constraintEnd_toEndOf="@+id/notifications"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/notifications"
        app:layout_constraintTop_toBottomOf="@+id/notifications" />
</androidx.constraintlayout.widget.ConstraintLayout>