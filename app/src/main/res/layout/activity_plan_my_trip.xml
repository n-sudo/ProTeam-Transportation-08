<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PlanMyTripActivity">

    <TextView
        android:id="@+id/chosenDestination"
        android:layout_width="368dp"
        android:layout_height="31dp"
        android:background="@color/textBackground"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="123 somehwere Indianapois, IN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/textForeground"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Your Destination:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Not quite right?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chosenDestination" />

    <Switch
        android:id="@+id/enjoySwitch"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:background="@color/textBackground"
        android:gravity="center"
        android:text="Nice"
        android:textColor="@color/textForeground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Switch
        android:id="@+id/safeSwitch"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:background="@color/textBackground"
        android:gravity="center"
        android:text="Safe"
        android:textColor="@color/textForeground"
        app:layout_constraintEnd_toEndOf="@+id/fastSwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fastSwitch"
        app:layout_constraintTop_toBottomOf="@+id/fastSwitch" />

    <Switch
        android:id="@+id/fastSwitch"
        android:layout_width="114dp"
        android:layout_height="29dp"
        android:background="@color/textBackground"
        android:gravity="center_horizontal|center_vertical"
        android:text="Fast"
        android:textColor="@color/textForeground"
        app:layout_constraintEnd_toEndOf="@+id/cheapSwitch"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cheapSwitch"
        app:layout_constraintTop_toBottomOf="@+id/cheapSwitch" />

    <Switch
        android:id="@+id/cheapSwitch"
        android:layout_width="114dp"
        android:layout_height="27dp"
        android:background="@color/textBackground"
        android:gravity="center"
        android:text="Cheap"
        android:textColor="@color/textForeground"
        app:layout_constraintEnd_toEndOf="@+id/enjoySwitch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/enjoySwitch"
        app:layout_constraintTop_toBottomOf="@+id/enjoySwitch" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="226dp"
        android:layout_height="23dp"
        android:layout_marginTop="48dp"
        android:text="What kind of ride would you like?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chosenDestination" />

    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="257dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/textBackground"
        android:text="select an option to learn more"
        android:textColor="@color/textForeground"
        app:layout_constraintBottom_toBottomOf="@+id/safeSwitch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cheapSwitch"
        app:layout_constraintTop_toTopOf="@+id/enjoySwitch"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/getOptions"
        android:layout_width="113dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/gradient2"
        android:text="Get me a ride"
        android:textColor="@color/textForeground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch11"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="167dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:text="More options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreInfo" />

    <Switch
        android:id="@+id/switch11"
        android:layout_width="370dp"
        android:layout_height="29dp"
        android:background="@color/textBackground"
        android:textColor="@color/textForeground"
        android:text="I don't mind switching vehicles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="149dp"
        android:layout_height="19dp"
        android:text="Here are the results:"
        android:textColor="@color/textForeground"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getOptions"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultsView"
        android:layout_width="371dp"
        android:layout_height="225dp"
        android:layout_marginTop="4dp"
        android:background="@color/textBackground"
        android:textColor="@color/textForeground"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>